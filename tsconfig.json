{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
  },
  "include": [
    "./typechain",
    "./addresses",
    "./utils",
    "index.ts"
  ],
  "exclude": [
    "dist"
  ]
}